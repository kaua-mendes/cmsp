    <script>
        const title = "CMSP Plataformas Hacks";
        const titleElement = document.getElementById("title").querySelector("span");
        let index = 0;
        let isDeleting = false;

        function type() {
            const currentText = title.slice(0, index);
            titleElement.textContent = currentText;

            if (isDeleting) {
                index--;
                if (index < 0) {
                    isDeleting = false;
                    index = 0;
                    setTimeout(type, 800);
                } else {
                    setTimeout(type, 80);
                }
            } else {
                index++;
                if (index > title.length) {
                    isDeleting = true;
                    setTimeout(type, 1000);
                } else {
                    setTimeout(type, 150);
                }
            }
        }

        type();

        document.addEventListener('contextmenu', function(e) {
            e.preventDefault();
        });

        async function copyToClipboard(url) {
            try {
                const response = await fetch(url);
                if (!response.ok) {
                    throw new Error('Erro ao buscar o script');
                }
                const code = await response.text();
                await navigator.clipboard.writeText(code);
                alert(' \nScript copiado com sucesso!\n ');
            } catch (error) {
                alert(' \nErro ao copiar o script. Tente novamente.\n ');
            }
        }

        document.getElementById('cmspButton').addEventListener('click', async () => {
            window.open('https://cmspcheetokm.squareweb.app2/', '_blank');
        });

        document.getElementById('khanButton').addEventListener('click', async () => {
            await copyToClipboard('https://raw.githubusercontent.com/DarkMod3/DarkCloud/refs/heads/Main/CMSP-Plataformas-Hacks/Khan');
            window.open('https://github.com/DarkMod3/CMSP-Plataformas-Hacks/blob/Main/TutorialBK.md', '_blank');
        });
    
        document.getElementById('speakButton').addEventListener('click', async () => {
            await copyToClipboard('https://raw.githubusercontent.com/DarkMod3/DarkCloud/refs/heads/Main/CMSP-Plataformas-Hacks/SPeak');
            window.open('https://github.com/DarkMod3/CMSP-Plataformas-Hacks/blob/Main/TutorialBK.md', '_blank');
        });
    
        document.getElementById('aluraButton').addEventListener('click', async () => {
            await copyToClipboard('https://raw.githubusercontent.com/DarkMod3/DarkCloud/refs/heads/Main/CMSP-Plataformas-Hacks/Alura');
            window.open('https://github.com/DarkMod3/CMSP-Plataformas-Hacks/blob/Main/TutorialVM.md', '_blank');
        });

        document.getElementById('mesalvaButton').addEventListener('click', async () => {
            await copyToClipboard('https://raw.githubusercontent.com/DarkMod3/DarkCloud/refs/heads/Main/CMSP-Plataformas-Hacks/MeSalva');
            window.open('https://github.com/DarkMod3/CMSP-Plataformas-Hacks/blob/Main/TutorialVM.md', '_blank');
        });
    </script>    
